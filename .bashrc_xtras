#if $1 isn't in the path, set the new path to be $2
function pathmod() {
  if [[ ":$PATH:" != *":$1:"* ]]; then
    export PATH=$2
  fi
}

function pathpre() {
  pathmod "$1" "$1:$PATH"
}

function pathpost() {
